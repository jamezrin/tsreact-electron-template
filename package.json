{
  "name": "tsreact-electron-template",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "author": {
    "name": "your name"
  },
  "description": "electron, typescript and react template",
  "build": {
    "appId": "com.example.tsreact_electron_app",
    "productName": "Executable Name",
    "copyright": "Copyright Â© Year Author"
  },
  "dependencies": {
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "11.2.7",
    "@testing-library/user-event": "12.8.3",
    "@types/jest": "26.0.23",
    "@types/node": "14.17.3",
    "@types/react": "17.0.11",
    "@types/react-dom": "17.0.8",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "4.3.4"
  },
  "scripts": {
    "start-dev-server": "cross-env BROWSER=none react-scripts start",
    "start-dev-app": "wait-on http://localhost:3000 && electron .",
    "start": "concurrently \"npm run start-dev-server\" \"npm run start-dev-app\"",
    "recompile": "npm run build && npm run dist",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dist": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "5.3.0",
    "cross-env": "7.0.3",
    "electron": "11.4.9",
    "electron-builder": "22.11.3",
    "wait-on": "5.3.0"
  }
}
